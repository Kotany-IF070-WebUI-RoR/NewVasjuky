.nested-fields.col-md-12.col-sm-12.col-xs-12
  = f.input :attachment, as: :file, label: 'Додати фото (формат: jpeg, gif, png)', input_html: {accept: ('image/*'), capture: ('camera') }, class: 'btn btn-template-main'
  img src="" alt="Image preview"/
javascript:
    $('document').ready(function(){
      $(".nested-fields > div > input").on("change",function(e){
        var preview = e.target.parentNode.parentNode.getElementsByTagName("img")[0];
        console.log(e.target.parentNode.getElementsByTagName("input")[0].files[0]);
        var file    = e.target.parentNode.getElementsByTagName("input")[0].files[0]
        var reader  = new FileReader();

        reader.addEventListener("load", function () {
          preview.src = reader.result;
        }, false);

        if (file) {
          reader.readAsDataURL(file);
        }
      });

    });

