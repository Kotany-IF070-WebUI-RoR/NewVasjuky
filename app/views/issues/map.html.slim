h1 Мапа звернень
#issues-map

javascript: 

  var map = new L.Map('issues-map', 
            { center: new L.LatLng(50.1192478, 26.8197633), 
              zoom: 9});
  var googleLayer = new L.Google('ROADMAP');
  map.addLayer(googleLayer);
  
  var markers = #{collect_markers};
  var bounds = [];
  markers.forEach(function(issue){
    var coords = issue.latlng
    var marker = L.marker(coords).addTo(map);
    var popup = L.popup()
                  .setLatLng(coords)
                  .setContent(issue.popup)
    marker.bindPopup(popup);
    bounds.push(coords)
  });
  map.fitBounds(bounds);